{% extends "base.html.twig" %}


{% block title %}Création d'une annonce
{% endblock %}
{% form_theme myForm _self %}
{% block body %}
	<div class="container">
		<h1>Création d'une nouvelle annonce</h1>

		{{ form_start(myForm) }}

		{# <h3>avant form_widget</h3>
				
				        {{form_row(myForm.title)}}
				        <h3>Après form widget</h3> #}
		{{form_widget(myForm)}}


		<button type="submit" class="btn btn-primary mt-3">Création d'une nouvelle annonce</button>
		{{ form_end(myForm) }}
	</div>
{% endblock %}

{% block form_row %}
	<div class="form-group">
		<div class="row">
			<div class="col-6">
				{{form_label(form)}}
			</div>
			<div class="col-6">
				{{form_widget(form)}}
			</div>
		</div>
	</div>
{% endblock %}

{% block text_widget %}
	<input type="text" name="{{full_name}}" id="{{id}}" class="form-control">
{% endblock %}
